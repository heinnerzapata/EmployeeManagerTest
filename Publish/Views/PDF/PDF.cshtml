
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PDF</title>
      
</head>
<body>
    <div> 


        <!--Report-->

        <section id="reportSection">

            <table cellpadding="0" cellspacing="0" border="1">

                <tr>

                    <th>ID</th>
                    <th>Picture</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Project</th>

                </tr>

                @foreach (var employee in ViewBag.Employees)
                {

                    <tr>

                        <td>@employee.EmploId</td>
                        <td><img width="100" height="100" src="@employee.EmploPicture" /></td>
                        <td>@employee.EmploName</td>
                        <td>@employee.PosDesc</td>
                        <td>@employee.ProjDesc</td>

                    </tr>

                }

            </table>
            <br />
            <a href="@Url.Action("ExportPDF" , "PDF")">Export PDF</a>

        </section>

        <!--/Report-->



    </div>
</body>
</html>
